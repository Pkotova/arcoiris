<div class="modal fade" id="addTask" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create Board</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/task/create-task" , method="post">
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" class="form-control mb-2" id="inlineFormInput" placeholder="Board Name"
                                name="boardName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input type="text" class="form-control mb-2" id="inlineFormInput"
                                placeholder="Invite people - enter email" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <select class="selectpicker" multiple data-live-search="true">
                                <option>George Petrov</option>
                                <option>Ivan Ivanov</option>
                                <option>Melisa Petkanova</option>
                                <option>Velichka Kuzmanova</option>
                                <option>Kosta Kasimov</option>
                                <option>Petar Vurbanov</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-secondary">Create board</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>